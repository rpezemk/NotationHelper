<UserControl x:Class="MusicDataModel.MusicViews.Tools.ToolBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicDataModel.MusicViews.Tools"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             Width="40"
             Height="40"
             d:DesignHeight="60" d:DesignWidth="60">
    <Button BorderThickness="1" BorderBrush="Gray" Background="{StaticResource WindowBackgroundBrush}">
        <Grid Background="{StaticResource WindowBackgroundBrush}">
            <TextBlock x:Name="MyTextBlock"  Foreground="LightGray" FontFamily="Consolas" FontSize="16"/>
        </Grid>
    </Button>
</UserControl>
