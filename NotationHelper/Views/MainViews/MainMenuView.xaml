<UserControl x:Class="NotationHelper.MusicViews.MainViews.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotationHelper.MusicViews.MainViews"
             xmlns:mainMVVM="clr-namespace:NotationHelper.MVVM.MainVM"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <UserControl.DataContext>
        <mainMVVM:Main_VM/>
    </UserControl.DataContext>
    <Grid>
        <Menu x:Name="MainMenu" Grid.ColumnSpan="5" MinWidth="50" FontSize="15" 
            VerticalAlignment="Center" 
            Background="Transparent" 
            Foreground="{StaticResource ForegroundTextBrush}" MinHeight="20"/>
    </Grid>
</UserControl>
