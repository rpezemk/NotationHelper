<Application x:Class="MusicDataModel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MusicDataModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Merging the external ResourceDictionary -->

        <ResourceDictionary> 
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BlackResourceDictionary.xaml"/>
                <ResourceDictionary Source="StyleResources/ColorDictionary.xaml"/>
                <ResourceDictionary>
                    <FontFamily x:Key="BravuraFontFamily">pack://application:,,,/Fonts/#Bravura</FontFamily>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
