<Window x:Class="NotationHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotationHelper"
        xmlns:ctrls="clr-namespace:NotationHelper.Controls"
        mc:Ignorable="d"
        x:Name="MainWindowControl"
        SizeChanged="MainWindowControl_SizeChanged"
        Loaded="MainWindowControl_Loaded"
        MinHeight="400"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan ="6">
            <Menu x:Name="MainMenu" Grid.ColumnSpan="5" MinWidth="50"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan ="6" HorizontalAlignment="Right">
            <Button Click="MinimizeButton_Click" Background="Transparent" x:Name="MinimizeButton" Width="20" Content="__" HorizontalAlignment="Right"/>
            <Button Click="MaximizeButton_Click" Background="Transparent" x:Name="MaximizeButton" Width="20" Content="[  ]" HorizontalAlignment="Right"/>
            <Button Click="CloseButton_Click"    Background="Transparent" x:Name="CloseButton" Width="20" Content="X" HorizontalAlignment="Right"/>
        </StackPanel>
        <GridSplitter Grid.Column="1" Grid.Row="1" Background="Black" HorizontalAlignment="Center" Width="4"/>
        <Grid x:Name="MultiColumnGrid" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="4" MinHeight="400"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="9" Orientation="Horizontal">
            <Button x:Name="ClearButton" Margin="3,0,3,0" Height="25" Width="60" Content="Clear" Click="ClearButton_Click"/>
            <Button x:Name="FillButton" Margin="3,0,3,0" Height="25" Width="60" Content="Fill" Click="FillButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
